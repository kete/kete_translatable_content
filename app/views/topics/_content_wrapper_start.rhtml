<% style_classes ||= nil -%>
<div id="content-wrapper" <%= " class=\"#{style_classes}\"" unless style_classes.blank? %>>
  <% if show_basket_list_naviation_menu? -%>
  <div id="basket-list-column">
    <div class="secondary-content-section-wrapper basket-list-column">
      <div id="basket-list-column-content" class="secondary-content-section">
        <h2 class="basket-list-headline"><%=t 'topics.content_wrapper_start.baskets' %></h2>
        <%= render_baskets_as_menu %>
        <div class="secondary-content-section-footer-wrapper"><div class="secondary-content-section-footer">&nbsp;</div></div>
      </div>
    </div>
  </div>
  <% end -%>
  <div id="main-content-wrapper">
    <div id="main-content-container">
      <a name="main-content"></a>
      <% if !%w(configure topics images video audio documents web_links comments).include?(params[:controller]) && kete_translatable_content? && !['appearance', 'homepage_options'].include?(params[:action]) -%>
        <div id="translate-controls">
            <%= available_in_locales_for(current_translatable_record) -%>
            <%= needed_in_locales_for(current_translatable_record, :lightbox => true) -%>
        </div>
      <% elsif %w(topics images video audio documents web_links).include?(params[:controller]) && kete_translatable_content? -%>
        <%= combined_tranlation_links -%>
      <% end -%>

        
